{
  "name": "@onliffe/widgets",
  "version": "0.1.0",
  "description": "Bootstrap-based widgets for React. Intended for Onliffe, thus not complete.",
  "scripts": {
    "pretest": "npm run build -- --standalone onliffewidgets",
    "test": "karma start",
    "build": "browserify -r ./src/index.js:@onliffe/widgets -t babelify src/index.js -o dist.js"
  },
  "main": "dist.js",
  "files": ["../../LICENSE", "dist.js"],
  "author": "thatlittlegit",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babelify": "^8.0.0",
    "chai": "^4.1.2",
    "karma": "^2.0.0",
    "karma-babel-preprocessor": "^7.0.0",
    "karma-browserify": "^5.1.3",
    "karma-chai": "^0.1.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "mocha": "^5.0.0"
  },
  "dependencies": {
    "preact": "^8.2.7",
    "preact-compat": "^3.17.0",
    "vquery": "^5.0.1"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ]
  },
  "xo": {
    "envs": [
      "browser"
    ],
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "React"
        }
      ]
    },
    "overrides": [
      {
        "files": "test/*.js*",
        "envs": [
          "browser",
          "mocha",
          "jquery"
        ],
        "globals": [
          "React",
          "onliffewidgets"
        ]
      }
    ]
  }
}
